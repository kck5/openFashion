<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".returnActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/topscreen_size_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp">

            <ImageView
                android:id="@+id/back_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/sc_txt"
                style="@style/internal_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/droid_serif"
                android:layout_marginTop="3dp"
                android:paddingStart="10dp"
                android:text="@string/how_to_return"
                app:layout_constraintStart_toEndOf="@+id/back_return"
                app:layout_constraintTop_toTopOf="@+id/back_return" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_Sizechart_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topscreen_size_card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_Sizechart_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp">

            <ImageView
                android:id="@+id/return_banner"
                android:layout_width="500dp"
                android:layout_height="250dp"
                android:src="@drawable/happy_return"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/dot_one"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/dot1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/return_banner" />


            <TextView
                android:id="@+id/men_measurement_text1"
                style="@style/sub_normal_bold_18"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:layout_marginEnd="5dp"
                android:text="@string/one_point"
                app:layout_constraintBottom_toBottomOf="@+id/dot_one"
                app:layout_constraintStart_toEndOf="@+id/dot_one"
                app:layout_constraintTop_toTopOf="@+id/dot_one"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/dot_two"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/dot1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/men_measurement_text1" />


            <TextView
                android:id="@+id/men_measurement_text2"
                style="@style/sub_normal_bold_18"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:layout_marginEnd="5dp"
                android:text="@string/two_point"
                app:layout_constraintBottom_toBottomOf="@+id/dot_two"
                app:layout_constraintStart_toEndOf="@+id/dot_two"
                app:layout_constraintTop_toTopOf="@+id/dot_two"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/dot_three"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/dot1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/men_measurement_text2" />


            <TextView
                android:id="@+id/men_measurement_text3"
                style="@style/sub_normal_bold_18"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:layout_marginEnd="5dp"
                android:text="@string/three_point"
                app:layout_constraintBottom_toBottomOf="@+id/dot_three"
                app:layout_constraintStart_toEndOf="@+id/dot_three"
                app:layout_constraintTop_toTopOf="@+id/dot_three"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/dot_four"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/dot1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/men_measurement_text3" />


            <TextView
                android:id="@+id/men_measurement_text4"
                style="@style/sub_normal_bold_18"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:layout_marginEnd="5dp"
                android:text="@string/four_point"
                app:layout_constraintBottom_toBottomOf="@+id/dot_four"
                app:layout_constraintStart_toEndOf="@+id/dot_four"
                app:layout_constraintTop_toTopOf="@+id/dot_four"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/dot_five"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/dot1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/men_measurement_text4" />


            <TextView
                android:id="@+id/men_measurement_text5"
                style="@style/sub_normal_bold_18"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:layout_marginEnd="5dp"
                android:text="@string/five_point"
                app:layout_constraintBottom_toBottomOf="@+id/dot_five"
                app:layout_constraintStart_toEndOf="@+id/dot_five"
                app:layout_constraintTop_toTopOf="@+id/dot_five"
                app:layout_constraintEnd_toEndOf="parent"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
